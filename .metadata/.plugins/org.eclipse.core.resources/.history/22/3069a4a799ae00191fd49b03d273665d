package com.zensar.services;

import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.PathParam;
import javax.ws.rs.Produces;
import javax.ws.rs.core.Response;

@Path("/zenparam")
public class HelloParam{
	
	@Path("/welcomed/{nm}")
	@GET
	@Produces("text/html")
	public Response getMessage(@PathParam("nm","mn","mp") String day,month,year){
		return Response.status(200).entity("<p> Birthday --> "+day+"/"+month+"/"+year+"</p>").build();
	}

}

